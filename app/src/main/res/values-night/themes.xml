<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WomenInTech" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B053297C</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/gradient_dark_background</item>
        <item name="card_text_bg">@drawable/dark_card_background</item>
        <item name="title_bg">@drawable/dark_semi_circle</item>
        <item name="detail_bg">@drawable/dark_detail_bg</item>
        <item name="animation_bg">#F3000000</item>
    </style>
</resources>