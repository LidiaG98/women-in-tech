<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" />
    </item>
    <item
        android:bottom="0dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-80dp">
        <shape  android:shape="oval">

            <solid android:color="#C42F086E" />
            <corners android:radius="7dp" />

        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="-90dp"
        android:right="-90dp"
        android:top="-80dp">
        <shape android:shape="oval">
            <gradient
                android:endColor="#510A65"
                android:startColor="#5E4187"
                android:angle="0" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>